<%- include('partials/header.ejs') %>
<h2>All Posts</h2>
<% if(posts.length === 0) {%>
    <p>No Posts yet.</p>
    <% }else { %>
        <% posts.forEach(post => { %>
            <div class="post-preview">
                <h3><a href="/posts/<%= post.title %>"><%= post.title %></a></h3>
                <p><%= post.content.substring(0, 100) %>...</p>
            </div>
            <% }) %>
            <% } %>

            <%- include('partials/footer.ejs')  %>